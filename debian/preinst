#!/bin/sh
# preinst script for vx-dga-l-conky
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    install|upgrade)

	for USU in $( getent passwd | awk -F ":" '{if ( $3 > 999 &&  $6~/\/home\/.*/) {print $1}}' ) ; do

		if test -f /home/$USU/.config/lxsession/Lubuntu/autostart ; then
			sed --follow-symlinks -i "/.*aplicaciones-inicio.*/d" /home/$USU/.config/lxsession/Lubuntu/autostart
			chown $USU /home/$USU/.config/lxsession/Lubuntu/autostart
		fi

	done

	if test -f /usr/bin/aplicaciones-inicio ; then
		sed --follow-symlinks -i "/.*[cC]onky.*/d" /usr/bin/aplicaciones-inicio
	fi

    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
