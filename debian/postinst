#!/bin/bash
# postinst script for vx-dga-l-conky
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)

	if test -f /usr/bin/inicio-conky ; then
		chmod +x /usr/bin/inicio-conky
	fi
	if test -f /usr/bin/migasfree-cid ; then
		chmod +x /usr/bin/migasfree-cid
	fi

	# Intentamos modificar la interfaz eth0 por la activa...
	FILECONKY="/usr/share/vitalinux/conky/circle/conkyrc"
	FILELUA="/usr/share/vitalinux/conky/.lua/scripts/clock_rings.lua"
	INTPRINCIPAL="$(ip route list | grep default | awk '{print $5}' | head -1)"

	if [ "${INTPRINCIPAL}" != "" ]; then
		for FILE in "${FILECONKY}" "${FILELUA}"; do
			sed -i --follow-symlinks "s/eth0/$INTPRINCIPAL/g" $FILE
		done
	fi

	USERGRAF=$(vx-usuario-grafico)
	if [ -n "$USERGRAF" ] && (id "$USERGRAF" &> /dev/null) ; then
		sleep 1
		su -c "/usr/bin/inicio-conky &> /dev/null" --login "$USERGRAF" || exit 0
	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
